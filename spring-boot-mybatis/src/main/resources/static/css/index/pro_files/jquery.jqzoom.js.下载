!function(o){o.fn.simpleZoom=function(e){var i={zoomBox:"#zoomBox",markSize:[200,100],zoomSize:[400,400],zoomImg:[800,800]},t=o.fn.extend({},i,e);return this.each(function(){var e=o(this),i=o(t.zoomBox),m=o(t.zoomBox).find("img"),n=[e.width(),e.height(),e.offset().left,e.offset().top],p=t.markSize,a=t.zoomSize,s=t.zoomImg,r="<i id='mark'></i>",f={position:"absolute",top:0,left:0,width:p[0]+"px",height:p[1]+"px",backgroundColor:"#000",opacity:.5,filter:"alpha(opacity=50)",display:"none",cursor:"pointer"},h=n[0]-p[0],c=n[1]-p[1];i.css({width:a[0]+"px",height:a[1]+"px"}),e.append(r),o("#mark").css(f),e.mouseover(function(){o("#mark").show(),i.show()}).mouseout(function(){o("#mark").hide(),i.hide()}).mousemove(function(e){var i=e.pageX-n[2]-p[0]/2,t=e.pageY-n[3]-p[1]/2;0>i?i=0:i>h&&(i=h),0>t?t=0:t>c&&(t=c),o("#mark").css({left:i+"px",top:t+"px"});var r=-(i/h)*(s[0]-a[0]),f=-(t/c)*(s[1]-a[1]);m.css({left:r+"px",top:f+"px"})})})}}(jQuery);