<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.java.mapper.StudentMapper">
<select id="selectAll" resultType="com.java.pojo.Student">
select * from student
</select>

<select id="selectOne" resultType="com.java.pojo.Student">
select * from student where id=#{0}
</select>

<update id="update" parameterType="com.java.pojo.Student">
update student set name=#{name},age=#{age} where id = #{id}
</update>

</mapper>